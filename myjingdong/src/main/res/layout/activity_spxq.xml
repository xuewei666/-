<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/zhan_simple"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="300dp" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="@dimen/sp_14"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zhan_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥：25.9"
            android:textSize="@dimen/sp_16"
            android:textColor="#f00"
            />
        <TextView
            android:id="@+id/zhan_yuanprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="原价格￥ 86"
            android:textColor="#bbbbbb"
            />
        <TextView
            android:id="@+id/zhan_tite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="xxx"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_72">
        <Button
            android:id="@+id/zhan_jia"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ffd306"
            android:textColor="@color/white"
            android:text="加入购物车"/>
        <Button
            android:id="@+id/zhan_gou"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#f75000"
            android:textColor="@color/white"
            android:text="立即购买"/>
    </LinearLayout>
</LinearLayout>

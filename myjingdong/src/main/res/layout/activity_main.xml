<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RadioGroup

        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:drawableTop="@drawable/selector_shouye"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/text_color"
            />
        <RadioButton
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_fenlei"
            android:button="@null"
            android:gravity="center"
            android:text="分类"
            android:textColor="@drawable/text_color"
            />
        <RadioButton
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_faxian"
            android:button="@null"
            android:gravity="center"
            android:text="发现"
            android:textColor="@drawable/text_color"
            />
        <RadioButton
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_gouwuche"
            android:button="@null"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@drawable/text_color"
            />
        <RadioButton
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_wode"
            android:button="@null"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/text_color"
            />
    </RadioGroup>

</LinearLayout>
